{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/pss580_patch_manifest.schema.json",
  "title": "PSS-580 Patch Library Manifest",
  "type": "object",
  "required": [
    "generated_utc",
    "items"
  ],
  "properties": {
    "generated_utc": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "bank",
          "syx_path",
          "tags"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "bank": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "syx_path": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "recommended_pc": {
            "type": [
              "integer",
              "null"
            ],
            "minimum": 0,
            "maximum": 127
          },
          "send_delay_ms": {
            "type": [
              "integer",
              "null"
            ],
            "minimum": 0,
            "maximum": 5000
          },
          "sha1": {
            "type": [
              "string",
              "null"
            ],
            "pattern": "^[a-f0-9]{40}$"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}